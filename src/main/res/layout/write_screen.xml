<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/text_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"/>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_note"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_light"
    />
    <ImageView
        android:id="@+id/tap_tag_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:src="@drawable/icon_tap_tag"
    />
    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tap_tag_image"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/info_string"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/nxp_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/app_bkgnd"
        android:layout_below="@+id/text_info"
    />


</RelativeLayout>